<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_perfil">


    <EditText
        android:id="@+id/etNome"
        android:layout_width="242dp"
        android:layout_height="53dp"
        android:layout_marginTop="320dp"
        android:background="@drawable/botaoredondo"
        android:backgroundTint="#ADADAD"
        android:ems="10"
        android:hint="Nome"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:textColor="#1B1A1A"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etCargo"
        android:layout_width="242dp"
        android:layout_height="53dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/botaoredondo"
        android:backgroundTint="#ADADAD"
        android:ems="10"
        android:hint="Cargo"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:textColor="#211F1F"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNome" />

    <Button
        android:id="@+id/btn_salvar"
        android:layout_width="231dp"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/botaoredondo"
        android:backgroundTint="#530303"
        android:text="Salvar mudanÃ§as"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etCargo"
        app:layout_constraintVertical_bias="0.226"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>