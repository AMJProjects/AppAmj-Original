<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_escopos"
    android:padding="16dp">

    <!-- Botão de Navegação Superior -->
    <ImageButton
        android:id="@+id/voltarEscopo"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:background="#4C0000"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/setinha_branca" />

    <!-- Botão de Edição -->


    <TextView
        android:id="@+id/textViewDetalhes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/voltarEscopo"
        android:layout_marginTop="111dp"
        android:background="@drawable/botaoredondo"
        android:backgroundTint="#D9D9D9"
        android:padding="20dp"
        android:text="Detalhes do Escopo"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnDownloadPdf"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDetalhes"
        android:layout_marginLeft="35sp"
        android:layout_marginTop="-155dp"
        android:backgroundTint="#4CAF50"
        android:text="Baixar PDF"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnVoltarMenu"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDownloadPdf"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="36dp"
        android:layout_toStartOf="@id/editBtn"
        android:background="@drawable/botaoredondo"
        android:backgroundTint="#8D0000"
        android:minHeight="48dp"
        android:text="Voltar ao Menu"
        android:textColor="@color/white" />

    <ImageButton
        android:id="@+id/editBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="34dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/btn_edit" />


</RelativeLayout>
